<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <h4 class="m-3"><strong>ジャンル一覧・追加</strong></h4>
        <%= render 'new_form', genre: @genre %>
      <table class="table table-hover table-inverse shadow-lg">
        <thead>
          <tr>
            <th class="table-active">ジャンル</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
