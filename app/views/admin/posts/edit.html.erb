<div class="container">
    <div class="row">
        <h4 class="mb-2">投稿編集</h4>
        <%= form_with model: @post, url: admin_trader_post_path(@post.trader.id,@post.id), method: :patch, local:true do |f| %>
            <div class="form-group">
                <!--%= f.label :商品画像 %-->
                <!--%= f.file_field :image, accept: "image/*" %-->
            </div>
            <div class="form-group">
                <%= f.label :タイトル %>
                <%= f.text_field :title %>
            </div>
            <div class="form-group">
                <%= f.label :内容 %>
                <%= f.text_area :body %>
            </div>
            <div class="form-group">
                <%= f.submit '変更を保持', class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
