<thead>
	<tr>
		<th>イメージ写真</th>
		<th>タイトル</th>
		<th>内容</th>
		<th colspan="2">ユーザー評価欄</th>
		<th colspan="2"></th>
	</tr>
</thead>
<tbody>
	<% posts.each do |post| %>
		<tr>
			<td>
				<%= link_to admin_trader_post_path(trader.id,post.id) do %>
					<% if post.image.attached? %>
						<%= image_tag post.image, size: "80x80" %>
					<% else %>
						<%= image_tag '20200502_noimage.jpg', size: "80x80" %>
					<% end %>
				<% end %>
			</td>
			<td><%= link_to post.title,admin_trader_post_path(trader.id,post.id) %></td>
			<td><%= post.body %></td>
			<td>コメント件数：<%= post.comments.count %></td>
			<td>いいね数：<%= post.favorites.count %></td>
      <td>
        <%= link_to "編集する", edit_admin_trader_post_path(trader.id,post.id), class: "btn btn-sm btn-success" %>
        <%= link_to "削除する", admin_trader_post_path(trader.id,post.id) , data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",method: :delete  %>
      </td>
		</tr>
	<% end %>
</tbody>
