<div class="col-md-9">
	<table class="table table-bordered table-condensed" >
		<thead>
			<tr>
				<th>イメージ写真</th>
				<th>タイトル</th>
				<th>内容</th>
				<th colspan="2">ユーザー評価欄</th>
				<th colspan="3">投稿会社</th>
			</tr>
		</thead>
	  <tbody>
			<% @posts.each do |post| %>
				<tr>
					<td>
						<% if post.image.attached? %>
							<%= image_tag post.image, size: "80x80" %>
						<% else %>
							<%= image_tag '20200502_noimage.jpg', size: "80x80" %>
						<% end %>
					</td>
					<td><%= link_to post.title,admin_trader_post_path(post.trader.id,post.id) %></td>
					<td><%= post.body %></td>
					<td>コメント件数：<%= post.comments.count %></td>
					<td>いいね数：<%= post.favorites.count %></td>
  				<td>
  					<%= post.trader.name%>
    					<%= link_to "編集", edit_admin_trader_post_path(post.trader.id,post.id), class: "btn btn-sm btn-success" %>
              <%= link_to "削除", admin_trader_post_path(post.trader.id,post.id), data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",method: :delete  %>
   				</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @posts %>
</div>
