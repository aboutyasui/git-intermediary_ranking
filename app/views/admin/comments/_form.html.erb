<!--コメント入力Form-->
<%= form_with(model:[client, post, comment],url: admin_client_post_comment_path(client.id,post.id,comment.id), method: :patch, local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "w-100 comment-textarea" %>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>
