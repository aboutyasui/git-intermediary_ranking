<div class="container px-5 px-sm-0">
  <div class="row mt-3">
    <div class="col-md-9">
      <strong style="font-size:25px;">業者一覧</strong>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>業者名</th>
            <th>メールアドレス</th>
            <th>連絡先</th>
            <th>ジャンル</th>
            <th colspan="2">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @traders.each do |trader| %>
            <tr>
              <td><%= link_to trader.name,admin_trader_path(trader.id) %></td>
              <td><%= trader.email %></td>
              <td><%= trader.telephone_number %></td>
              <td><%= trader.genre.name %></td>
              <td><%= trader.is_deleted_i18n %><!--レビューの平均値を表示予定--></td>
              <td><%= link_to "編集する",edit_admin_trader_path(trader.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @traders %>
    </div>
  </div>
</div>