<div class="container">
	<div class="row d-flex">
		<div class="col-md-3">
		  <% if @trader.profile_image.attached? %>
				<%= image_tag(@trader.get_profile_image(200,200)) %>
			<% else %>
				<%= image_tag 'leader_sagyouin_woman.jpg', size: "200x200" %>
			<% end %>
		</div>
		<div class="col-md-9">
			<h2 class="head-line text-center title_h3"><%= @trader.name %>さん 詳細情報</h2>
			<p>
				登録情報
				<%= link_to " 編集する", edit_admin_trader_path(@trader.id), class: "btn btn-success" %>
			</p>
			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="info col-xs-2">業者名</td>
						<td class="text-left"><%= @trader.name %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @trader.email %></td>
					</tr>
					<tr>
						<td class="info">ジャンル</td>
						<td class="text-left"><%= @trader.genre_id %></td>
					</tr>
					<tr>
						<td class="info">会社情報</td>
						<td class="text-left"><%= @trader.trader_info %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @trader.telephone_number %></td>
					</tr>
					<tr>
						<td class="info">ステータス</td>
						<td class="text-left"><%= @trader.is_deleted_i18n %></td>
					</tr>
				</tbody>
			</table>
			<p>
				投稿履歴 : <%= @posts.count%>件<br>
				<%= link_to " 一覧ページへ", admin_trader_posts_path(@trader.id), class: "btn btn-success" %>
			</p>
		</div>
	</div>
</div>
