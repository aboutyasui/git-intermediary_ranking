<div class="container">
	<div class="row">
		<div class="col">
			<h2 class="head-line text-center title_h3">
				<%= @trader.name %>さん レビュー情報
				<%= @trader.review_avg(@trader) %>
			</h2>
			<table class="table table-bordered table-condensed" >
			  <thead>
			    <tr>
			      <th>顧客氏名</th>
			      <th>点数</th>
			      <th colspan="3">コメント</th>
			    </tr>
			  </thead>
				<tbody>
				  <% @reviews.each do |review| %>
					  <tr>
					    <td><%= link_to review.client.name,admin_client_trader_review_path(review.client.id,review.id) %></td>
					    <td><%= review.star %></td>
					    <td><%= review.review_comment %></td>
					    <td><%= link_to "編集ページへ",edit_admin_client_trader_review_path(review.client.id,review.id) %></td>
					    <td><%= link_to "削除",admin_client_trader_review_path(review.client.id,review.id),method: :delete %></td>
					  </tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
