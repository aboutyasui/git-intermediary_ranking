<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="head-line text-center">登録情報編集</h2>
      <%= form_with(model:@client, url:admin_client_path(@client.id), local: true ,method: :patch) do |f| %>
        <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"氏名", class: "col-sm-3 control-label" %>
            <%= f.text_field :name, class: "col-sm-3 form-control-static name" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
          </div>
          <div class="form-group">
           <%= f.label :"ユーザー情報" %>
           <%= f.text_area :client_info, class: "form-control introduction" %>
          </div>
          <div class="field">
            <%= f.label :職業 %>
            <%= f.radio_button :work, Client.works.key(0) %>
            <%= f.label :work, Client.works_i18n[:architecture] %>
            <%= f.radio_button :work, Client.works.key(1) %>
            <%= f.label :work, Client.works_i18n[:others]%>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
            <%= f.text_field :telephone_number, class: "col-sm-2 form-control-static" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :会員ステータス %>
          <%= f.radio_button :is_deleted, Client.is_deleteds.key(false) %>
          <%= f.label :is_deleted, Client.is_deleteds_i18n[:in_use] %>
          <%= f.radio_button :is_deleted, Client.is_deleteds.key(true) %>
          <%= f.label :is_deleted, Client.is_deleteds_i18n[:withdrawal]%>
        </div>
        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
        </div>
      <% end %>
    </div>
  </div>
</div>