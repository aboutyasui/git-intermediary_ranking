<div class="container px-5 px-sm-0">
  <h2>新規登録（業者側）</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "trader/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :name, "業者名" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :genre, "ジャンル" %><br />
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "選択して下さい" %>
    </div>
    <div class="form-group col-xs-9">
      <%= f.label :telephone_number,"電話番号", class: "col-sm-4 control-label" %><br />
      <%= f.text_field :telephone_number, class: "col-sm-4 form-control-static" %>
    </div>
    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "サインインする" %>
    </div>
  <% end %>

  <%= render "trader/shared/links" %>
</div>
