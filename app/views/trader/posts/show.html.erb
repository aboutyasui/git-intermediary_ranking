<div class="container px-5 px-sm-0">
 <h2>投稿情報</h2>
 <div class="row">
  <div class="col-md-4">
   <%= image_tag @post.get_image, size: "200x200" %>
  </div>
  <div class="col-md-8">
   <table class="table table-hover table-inverse">
    <tr>
     <td>タイトル</td>
     <td><%= @post.title %></td>
     <td>いいね数：<%= @post.favorites.count %></td>
    </tr>
    <tr>
     <td>内容</td>
     <td><%= @post.body %></td>
    </tr>
    <tr>
     <td>投稿した会社名</td>
     <td><%= @post.trader.name %></td>
    </tr>
   </table>
   <div>
    <p>コメント件数：<%= @post.comments.count %></p>
    <% @post.comments.each do |comment| %>
     <p><%= image_tag comment.client.get_profile_image(25,25) %></p>
     <p><%= link_to comment.client.name, trader_client_path(comment.client.id) %></p>
     <p><%= comment.created_at.strftime('%Y/%m/%d') %> : <%= comment.comment %></p>
    <% end %>
   </div>
   <% if @post.trader == current_trader %>
    <%= link_to "編集する", edit_trader_post_path(@post.id), class: "btn btn-sm btn-success" %>
    <%= link_to "削除する", trader_post_path(@post.id), data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",method: :delete  %>
   <% end %>
	 <%= link_to " 一覧へ", trader_user_path(@post.trader.id), class: "glyphicon glyphicon-folder-open btn btn-info" %>
  </div>
 </div>
</div>
