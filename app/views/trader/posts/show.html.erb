<div class="container px-5 px-sm-0">
 <h2>投稿情報</h2>
 <div class="row">
  <div class="col-md-4">
   <!--<!%= image_tag @item.get_image, size: "200x200" %>-->
   <!--%= image_tag(@item.get_image(200,200)) %-->
  </div>
  <div class="col-md-8">
   <table class="table table-hover table-inverse">
    <tr>
     <td>タイトル</td>
     <td><%= @post.title %></td>
    </tr>
    <tr>
     <td>内容</td>
     <td><%= @post.body %></td>
    </tr>
    <tr>
     <td>投稿した会社名</td>
     <td><%= @post.trader.name %></td>
    </tr>
   </table>
   <%= link_to "編集する", edit_trader_post_path(@post.id), class: "btn btn-sm btn-success" %>
   <%= link_to "削除する", trader_post_path(@post.id), data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",method: :delete  %>
	 <%= link_to " 一覧へ", trader_posts_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
  </div>
 </div>
</div>
