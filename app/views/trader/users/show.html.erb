<div class="container">
	<div class="row d-flex">
		<div class=col>
		  <%= image_tag(@trader.get_profile_image(200,200)) %>
		</div>
		<div class="col">
			<h2 class="head-line text-center title_h3"><%= @trader.name %>さん 詳細情報</h2>
			<p>
				登録情報
				<%= link_to " 編集する", edit_trader_user_path(@trader.id), class: "btn btn-success" %>
			</p>
			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="info col-xs-2">業者名</td>
						<td class="text-left"><%= @trader.name %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @trader.email %></td>
					</tr>
					<tr>
						<td class="info">ジャンル</td>
						<td class="text-left"><%= @trader.genre_id %></td>
					</tr>
					<tr>
						<td class="info">会社情報</td>
						<td class="text-left"><%= @trader.trader_info %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @trader.telephone_number %></td>
					</tr>
				</tbody>
			</table>
			<p>
				投稿履歴:<%= @posts.count%>件の投稿履歴があります
				<div class=col>
					<table class="table table-bordered table-condensed" >
        		<thead>
        			<tr>
        				<th colspan="2">タイトル</th>
        				<th colspan="2">評価関係</th>
        			</tr>
        		</thead>
        		<tbody>
							<% @posts.each do |post| %>
							  <tr>
							  	<td>
        						<%= link_to trader_post_path(post.id) do %>
        						  <%= image_tag post.get_image, size: "80x80" %>
        						<% end %>
        					</td>
								  <td><%= link_to post.title,trader_post_path(post.id) %></td>
								  <td>
								  	いいね数：<%= post.favorites.count%>
								    <!--%= render "favorites/btn", post: post %-->
								  </td>
								  <td><%= "#{post.comments.count}件のコメント"%></td>
							  </tr>
							<% end %>
					  </tbody>
					</table>
					<%= paginate @posts %>
				</div>
			  <%= link_to "新規投稿",new_trader_post_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
			</p>
		</div>
	</div>
</div>
