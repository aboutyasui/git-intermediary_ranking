<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h2 class="head-line text-center">登録情報編集</h2>

      <%= form_with(model:@trader, url:trader_user_path(@trader.id), local: true ,method: :patch) do |f| %>
        <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"業者名", class: "col-sm-3 control-label" %>
            <%= f.text_field :name, class: "col-sm-3 form-control-static name" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
          </div>
          <div class="form-group">
           <%= f.label :"ユーザー情報" %>
           <%= f.text_area :trader_info, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <label for="item_name">ジャンル</label>  <!--プルダウン方式-->
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
            <%= f.text_field :telephone_number, class: "col-sm-2 form-control-static" %>
          </div>
        </div>

        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
          <%= link_to '退会する', unsubscribe_trader_users_path, class: "btn btn-danger"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
