<div class="col-md-9">
	<table class="table table-bordered table-condensed" >
		<thead>
			<tr>
				<th>イメージ写真</th>
				<th>タイトル</th>
				<th>内容</th>
				<th colspan="2">評価関係</th>
				<th>投稿会社</th>
			</tr>
		</thead>
	  <tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><!--%= image_tag book.user.get_profile_image(50,50) %--></td>
					<td><%= link_to post.title,client_trader_post_path(post.trader.id,post.id) %></td>
					<td><%= post.body %></td>
					<td>いいね数：<%= post.favorites.count %>
					  <!--%= render "favorites/btn", post: post %-->
					</td>
					<td><%= "#{post.comments.count}件のコメント" %></td>
  				<td><%= post.trader.name%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @posts %>
</div>
