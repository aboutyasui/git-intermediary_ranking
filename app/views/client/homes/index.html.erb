<div class="col-md-9">
	<table class="table table-bordered table-condensed" >
		<thead>
			<tr>
				<th>イメージ写真</th>
				<th>タイトル</th>
				<th>内容</th>
				<th colspan="2">評価関係</th>
				<th>投稿会社</th>
			</tr>
		</thead>
	  <tbody>
			<% @posts.each do |post| %>
				<tr>
					<td>
						<%= link_to client_trader_post_path(post.trader.id,post.id) do %>
							<% if post.image.attached? %>
								<%= image_tag post.image, size: "80x80" %>
							<% else %>
								<%= image_tag '20200502_noimage.jpg', size: "80x80" %>
							<% end %>
						<% end %>
					</td>
					<td><%= link_to post.title,client_trader_post_path(post.trader.id,post.id) %></td>
					<td><%= post.body %></td>
					<td>
					  <%= render "client/favorites/btn", post: post %>
					</td>
					<td><%= "#{post.comments.count}件のコメント" %></td>
  				<td><%= post.trader.name%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @posts %>
</div>
